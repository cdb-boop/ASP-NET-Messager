@model MessagingWebApp.Models.ViewModels.CreateChatGroupRequest
@{
    ViewData["Title"] = "Create Chat";
}

<div class="text-center">
    <p>Create Chat</p>
</div>

<form method="post">
    <div>
        <div class="">
            <label for="name"></label>
            <input type="text" id="name" placeholder="Chat Name" asp-for="Name" />
        </div>
    </div>
    <div>
        <div class="">
            <label for="owner"></label>
            <input type="tel" id="owner" placeholder="From" asp-for="Owner" required />
        </div>
    </div>
    <div>
        <div class="">
            <label for="members"></label>
            <input type="members" id="members" placeholder="To" asp-for="Members" required />
            <!--<textarea name="members" id="members" cols="40" rows="5" required></textarea>-->
        </div>
    </div>
    <div class="d-flex">
        <div class="">
            <label for="firstMessage"></label>
            <textarea name="firstMessage" id="firstMessage" cols="40" rows="5" placeholder="SMS Message" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-send"></i>
        </button>
    </div>
</form>
